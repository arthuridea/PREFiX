	"web_accessible_resources": [
		"manifest.json"
	],
	"content_security_policy": "default-src 'self'; script-src 'self' 'unsafe-eval'; style-src 'unsafe-inline'; img-src 'self' data: http://s3.meituan.net http://s3-img.meituan.net https://s3.meituan.net https://s3-img.meituan.net; connect-src 'self' https://fanfou.com https://api.fanfou.com https://stream.fanfou.com",
	"description": "\u7b80\u6d01\u3001\u6613\u7528\u7684\u996d\u5426\u5ba2\u6237\u7aef.",
	"icons": {
		"256": "icons/256.png",
		"128": "icons/128.png",
		"48": "icons/48.png",
		"40": "icons/40.png",
		"38": "icons/38.png",
		"19": "icons/19.png",
		"16": "icons/16.png"
	},
	"omnibox": { "keyword": "f" },
	"manifest_version": 2,
	"name": "PREFiX",
	"options_page": "options.html",
	"permissions": [ "tabs", "contextMenus", "notifications", "https://fanfou.com/*", "https://api.fanfou.com/*", "https://stream.fanfou.com/*" ],
	"version": "0.9.2",
	"minimum_chrome_version": "47"
}
